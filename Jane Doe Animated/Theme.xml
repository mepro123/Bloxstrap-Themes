<BloxstrapCustomBootstrapper Version="1" Height="320" Width="520" Theme="Dark" Background="#000000" IgnoreTitleBarInset="True">
	<TitleBar Title="" ShowMinimize="False" ShowClose="False"/>
	<Image Source="theme://lucy.gif"
		IsAnimated="True"
		Stretch="UniformToFill"
		RenderOptions.BitmapScalingMode="HighQuality"/>
	
	<TextBlock Name="StatusText" FontStyle="Oblique" Width="400" HorizontalAlignment="Center" Margin="0,235,0,0" Foreground="{TextFillColorPrimaryBrush}">
	</TextBlock>
	
	<ProgressBar Name="PrimaryProgressBar" Height="10" Width="400" HorizontalAlignment="Center" Margin="0,260,0,0">
	</ProgressBar>
	
	<Button Name="CancelButton"
		Content="{Common.Cancel}"
		Height="30"
		Width="80"
		HorizontalAlignment="Center"
		Margin="0,280,0,0"
		BorderBrush="White"
		BorderThickness="1">
		<Button.Effect>
			<DropShadowEffect />
		</Button.Effect>
	</Button>
	
	<Image Source="theme://bloxstrap_fluid.gif"
		IsAnimated="True"
		Stretch="Uniform"
		Width="40"
		Height="40"
		Margin="10,10,0,0"
		RenderOptions.BitmapScalingMode="HighQuality"/>
</BloxstrapCustomBootstrapper>